<?xml version="1.0" encoding="utf-8"?>
<!-- This causes a custom game condition to trigger instead of normal Solar Flare behavior. Note that with this active, a "vanilla" Solar lare can only trigger via Dev Mode. -->
<Patch>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/IncidentDef[defName="SolarFlare"]/gameCondition</xpath>
		<value>
			<gameCondition>SFR_SolarFlare</gameCondition>
		</value>
    </Operation>
</Patch>