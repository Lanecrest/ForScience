<?xml version="1.0" encoding="utf-8"?>
<!-- This causes a custom game condition to trigger instead of normal SolarFlare behavior. Note that with this active, a "normal" SolarFlare can never trigger even via dev mode. -->
<Patch>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/GameConditionDef[defName="SolarFlare"]/conditionClass</xpath>
            <value>
		        <conditionClass>ForScience.GameCondition_FS_SolarFlare</conditionClass>
            </value>
    </Operation>
</Patch>